@model BoatsRentingSystem.MVC.Models.ReservationViewModel

@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<h4>Reservation</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h4>@Model.Boat.Name</h4>
        <h4>@Model.Customer.FirstName @Model.Customer.LastName</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Start Time</dt>
            <dd>@Model.StartTime</dd>
            <dt>End Time</dt>
            <dd>@Model.EndTime</dd>
            <dt>Total Price</dt>
            <dd>@Model.TotalPrice</dd>
            <dt>Description</dt>
            <dd>@Model.Description</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ReservationId" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
