@model BoatsRentingSystem.MVC.Models.BoatViewModel

@{
    ViewData["Title"] = "Delete Boat";
}

<h2>Delete Boat</h2>

<h4>Boat</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h4>@Model.Name</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd>@Model.Name</dd>
            <dt>Type</dt>
            <dd>@Model.Type</dd>
            <dt>Capacity</dt>
            <dd>@Model.Capacity</dd>
            <dt>Price Per Hour</dt>
            <dd>@Model.PricePerHour</dd>
            <dt>Availability</dt>
            <dd>@Model.Availability</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BoatId" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
